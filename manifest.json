{
    "name": "Fastapi Installation",
    "id": "fastapi",
    "packaging_format": 1,
    "description": {
        "en": "Install fastapi." 
    },
    "maintainer": {
        "name": "cwilhelm",
        "email": "charly.wilhelm@tvzofingen.ch"
    },
    "requirements": {
        "yunohost": ">> 11.2.4"
    },
    "version": "20230909",
    "multi_instance": "false",
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "system_name",
                "type": "string",
                "example": "myapp",
                "ask": {
                    "en": "Short name used by the system to identify your app",
                    "fr": "Nom court utilisé par le système pour identifier l'application"
                },
                "help": {
                    "en": "(only lowercases, alphanumeric characters, no spaces)",
                    "fr": "(caractères alphanumériques en minuscules seulement, pas d'espace"
                }
            },
            {
                "name": "display_name",
                "type": "string",
                "example": "My App",
                "ask": {
                    "en": "Display name (used in SSO portal)",
                    "fr": "Nom affiché (utilisé dans le portail SSO)"
                }
            },
            {
                "name": "domain",
                "type": "domain",
                "example": "example.com",
                "ask": {
                    "en": "Choose a domain for the fastapi app",
                    "fr": "Choisissez un nom de domaine pour l'application fastapi"
                }
            },
            {
                "name": "path",
                "type": "path",
                "example": "/fastapi",
                "default": "/fastapi",
                "ask": {
                    "en": "Choose a path for the fastapi app",
                    "fr": "Choisissez un chemin pour l'application fastapi"
                }
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true,
                "ask": {
                    "en": "Make the app public?",
                    "fr": "Rendre l'application publique ?"
                }
            }
        ]
    }
}
